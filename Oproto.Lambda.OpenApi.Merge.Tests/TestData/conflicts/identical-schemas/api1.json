{
  "openapi": "3.0.1",
  "info": {
    "title": "API 1 with Identical Schema",
    "version": "1.0.0"
  },
  "paths": {
    "/api1/items": {
      "get": {
        "operationId": "getApi1Items",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SharedModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SharedModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "name"]
      }
    }
  }
}
