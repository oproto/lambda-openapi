{
  "openapi": "3.0.1",
  "info": {
    "title": "API with Security",
    "version": "1.0.0"
  },
  "paths": {
    "/secure/data": {
      "get": {
        "operationId": "getSecureData",
        "summary": "Get secure data",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/admin/users": {
      "get": {
        "operationId": "getAdminUsers",
        "summary": "Get admin users",
        "security": [
          {
            "apiKey": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKey": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      }
    }
  }
}
